      relatedPosts.length > 0 && (
        <section class="mt-16 pt-12">
          <h2 class="mb-6 text-sm font-medium text-gray-500 dark:text-gray-500">Related Posts</h2>
          <div class="grid gap-3 sm:grid-cols-2">
