---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).filter((post) => post.data.published);

const tagCounts: Record<string, number> = {};
posts.forEach((post) => {
  (post.data.tags ?? []).forEach((tag: string) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

const tags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));
---

<BaseLayout title="Tags" description="Tất cả tags trên phucle.dev">
  <h1 class="mb-8 text-3xl font-extrabold tracking-tight">Tags</h1>

  {
    tags.length === 0 ? (
      <div class="rounded-xl border border-dashed border-gray-300 py-16 text-center dark:border-gray-700">
        <p class="text-gray-500 dark:text-gray-400">Chưa có tag nào.</p>
      </div>
    ) : (
      <div class="flex flex-wrap gap-3">
        {tags.map(({ tag, count }) => (
          <a
            href={`/tags/${tag.toLowerCase()}`}
            class="inline-flex items-center gap-2 rounded-lg border border-gray-200 px-4 py-2 text-sm font-medium text-gray-700 transition-colors hover:border-blue-300 hover:bg-blue-50 hover:text-blue-700 dark:border-gray-700 dark:text-gray-300 dark:hover:border-blue-700 dark:hover:bg-blue-900/20 dark:hover:text-blue-400"
          >
            {tag}
            <span class="rounded-full bg-gray-100 px-2 py-0.5 text-xs text-gray-500 dark:bg-gray-800 dark:text-gray-400">
              {count}
            </span>
          </a>
        ))}
      </div>
    )
  }
</BaseLayout>
