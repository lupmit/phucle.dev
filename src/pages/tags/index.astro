---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeading from '../../components/PageHeading.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).filter((post) => post.data.published);

const tagCounts: Record<string, number> = {};
posts.forEach((post) => {
  (post.data.tags ?? []).forEach((tag: string) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

const tags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));
---

<BaseLayout title="Tags" description="All tags on phucle.dev">
  <PageHeading title="Tags" />

  {
    tags.length === 0 ? (
      <div class="rounded-lg border border-dashed border-gray-300 py-16 text-center dark:border-gray-700">
        <p class="text-sm text-gray-500 dark:text-gray-500">No tags yet.</p>
      </div>
    ) : (
      <div class="flex flex-wrap gap-2">
        {tags.map(({ tag, count }) => (
          <a
            href={`/tags/${tag.toLowerCase()}`}
            class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-700 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            <span>#{tag}</span>
            <span class="rounded-full bg-gray-200 px-1.5 py-0.5 text-xs text-gray-600 dark:bg-gray-900 dark:text-gray-400">
              {count}
            </span>
          </a>
        ))}
      </div>
    )
  }
</BaseLayout>
