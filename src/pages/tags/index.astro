---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).filter((post) => post.data.published);

const tagCounts: Record<string, number> = {};
posts.forEach((post) => {
  (post.data.tags ?? []).forEach((tag: string) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

const tags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));
---

<BaseLayout title="Tags" description="All tags on phucle.dev">
  <h1
    class="mb-10 text-xl font-semibold leading-tight tracking-tighter text-gray-900 dark:text-gray-100 sm:text-3xl md:text-4xl md:leading-tight"
  >
    Tags
  </h1>

  {
    tags.length === 0 ? (
      <div class="rounded-lg border border-dashed border-gray-300 py-16 text-center dark:border-gray-700">
        <p class="text-sm text-gray-500 dark:text-gray-500">No tags yet.</p>
      </div>
    ) : (
      <div class="flex flex-wrap gap-2">
        {tags.map(({ tag, count }) => (
          <a
            href={`/tags/${tag.toLowerCase()}`}
            class="inline-flex items-center gap-2 rounded border border-gray-200 px-3 py-1.5 text-sm transition-colors hover:border-gray-900 hover:bg-gray-50 dark:border-gray-800 dark:hover:border-gray-100 dark:hover:bg-gray-950"
          >
            <span class="text-gray-900 dark:text-gray-100">{tag}</span>
            <span class="rounded-full bg-gray-100 px-1.5 py-0.5 text-xs text-gray-500 dark:bg-gray-900 dark:text-gray-500">
              {count}
            </span>
          </a>
        ))}
      </div>
    )
  }
</BaseLayout>
